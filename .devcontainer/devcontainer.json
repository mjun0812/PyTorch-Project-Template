{
	"name": "pytorch-project",
	"build": {
		"context": "..",
		"dockerfile": "Dockerfile",
		"args": {
			"PYTHON": "3.11"
		}
	},
	"containerEnv": {
		"PYTHONUNBUFFERED": "1",
		"UV_LINK_MODE": "copy",
		"UV_PROJECT_ENVIRONMENT": "/home/vscode/.venv",
		"DISPLAY": "dummy",
		"TZ": "Asia/Tokyo"
	},
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
	"runArgs": [
		"--rm"
	],
	"hostRequirements": {
		"gpu": "optional"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"charliermarsh.ruff",
				"eamodio.gitlens",
				"tamasfe.even-better-toml",
				"ms-toolsai.jupyter",
				"yzhang.markdown-all-in-one"
			]
		}
	},
	"postCreateCommand": "uv sync --frozen"
}